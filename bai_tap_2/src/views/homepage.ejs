<!-- Trang chủ: Hiển thị danh sách user -->
<h1 style="text-align:center;">Danh sách User</h1>
<div style="display:flex; justify-content:center;">
<table border="1" cellpadding="8" cellspacing="0" style="border-collapse:collapse; min-width:800px; background:#fff;">
  <thead style="background:#f2f2f2;">
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if (data) { JSON.parse(data).forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.address %></td>
        <td><%= user.phoneNumber %></td>
        <td><%= user.gender ? 'Nữ' : 'Nam' %></td>
        <td><%= user.roleId %></td>
        <td>
          <a href="/edit-crud?id=<%= user.id %>" style="padding:4px 10px; background:#007bff; color:#fff; border-radius:4px; text-decoration:none;">Edit</a>
        </td>
      </tr>
    <% }) } else { %>
      <tr><td colspan="9" style="text-align:center;">No data</td></tr>
    <% } %>
  </tbody>
</table>
</div>
<div style="text-align:center; margin-top:20px;">
  <a href="/crud" style="padding:8px 16px; background:#28a745; color:#fff; border-radius:4px; text-decoration:none;">Thêm User mới</a>
</div>
