<!-- Form CRUD -->
<h1 style="text-align:center;">Thêm User mới</h1>
<div style="display:flex; justify-content:center;">
<form action="/post-crud" method="POST" style="width:400px; background:#f9f9f9; padding:24px; border-radius:8px; box-shadow:0 2px 8px #eee;">
  <div style="margin-bottom:12px;">
    <label>Email:</label><br>
    <input type="email" name="email" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Password:</label><br>
    <input type="password" name="password" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>First Name:</label><br>
    <input type="text" name="firstName" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Last Name:</label><br>
    <input type="text" name="lastName" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Address:</label><br>
    <input type="text" name="address" style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Phone Number:</label><br>
    <input type="text" name="phoneNumber" style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Gender:</label><br>
    <select name="gender" style="width:100%; padding:6px;">
      <option value="1">Nữ</option>
      <option value="0">Nam</option>
    </select>
  </div>
  <div style="margin-bottom:12px;">
    <label>Role ID:</label><br>
    <input type="text" name="roleId" style="width:100%; padding:6px;">
  </div>
  <div style="text-align:center;">
    <button type="submit" style="padding:8px 16px; background:#28a745; color:#fff; border:none; border-radius:4px;">Tạo mới</button>
  </div>
</form>
</div>
