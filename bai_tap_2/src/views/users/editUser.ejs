<!-- Form Edit User -->
<h1 style="text-align:center;">Chỉnh sửa User</h1>
<div style="display:flex; justify-content:center;">
<form action="/put-crud" method="POST" style="width:400px; background:#f9f9f9; padding:24px; border-radius:8px; box-shadow:0 2px 8px #eee;">
  <input type="hidden" name="id" value="<%= data.id %>" />
  <div style="margin-bottom:12px;">
    <label>Email:</label><br>
    <input type="email" name="email" value="<%= data.email %>" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>First Name:</label><br>
    <input type="text" name="firstName" value="<%= data.firstName %>" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Last Name:</label><br>
    <input type="text" name="lastName" value="<%= data.lastName %>" required style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Address:</label><br>
    <input type="text" name="address" value="<%= data.address %>" style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Phone Number:</label><br>
    <input type="text" name="phoneNumber" value="<%= data.phoneNumber %>" style="width:100%; padding:6px;">
  </div>
  <div style="margin-bottom:12px;">
    <label>Gender:</label><br>
    <select name="gender" style="width:100%; padding:6px;">
      <option value="1" <%= data.gender ? 'selected' : '' %>>Nữ</option>
      <option value="0" <%= !data.gender ? 'selected' : '' %>>Nam</option>
    </select>
  </div>
  <div style="margin-bottom:12px;">
    <label>Role ID:</label><br>
    <input type="text" name="roleId" value="<%= data.roleId %>" style="width:100%; padding:6px;">
  </div>
  <div style="text-align:center;">
    <button type="submit" style="padding:8px 16px; background:#007bff; color:#fff; border:none; border-radius:4px;">Cập nhật</button>
  </div>
</form>
</div>
